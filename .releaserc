{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\nRelease Details:\n${nextRelease.notes}\n\nFixes:\n${commits.filter(commit => commit.type === 'fix').map(commit => `- ${commit.message}`).join('\n')}\n\nFeatures:\n${commits.filter(commit => commit.type === 'feat').map(commit => `- ${commit.message}`).join('\n')}"
      }
    ],
    "@semantic-release/github"
  ]
}
